{% extends 'blog/blog_base.html.twig' %}

{% block content %}
    <div class="container">
        <div class="section">
            <div class="row">
                <div class="col  s12 offset-m3 m6">
                    {{ form_start(form) }}
                    {{ form_row(form.title) }}

                    <div class="input-field">
                        {{ form_errors(form.categories) }}
                        {{ form_widget(form.categories) }}
                        {{ form_label(form.categories) }}
                    </div>

                    {{ form_row(form.abstract) }}
                    {{ form_row(form.body) }}
                    {{ form_end(form) }}
                </div>
            </div>
        </div>
    </div>
{% endblock %}